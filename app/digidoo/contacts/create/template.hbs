<form {{action 'submit' model on='submit' }}>
<div class="form-horizontal">
        <h1>Contacts Manager</h1>
        <hr/>
        <div class="form-group">
            <label class="control-label col-md-2" for="Name">First Name</label>
            <div class="col-md-10">
                {{ input class="form-control text-box single-line" id="firstName" name="firstName" type="text" value=model.firstName}}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Last Name">Last Name</label>
            <div class="col-md-10">
                {{input class="form-control text-box single-line" id="lastName" name="lastName" type="text" value=model.lastName}}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="phone">Phone Number</label>
            <div class="col-md-10">
                {{input class="form-control text-box single-line" id="phone" name="phone" type="text" value=model.phone}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
